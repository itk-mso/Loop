/**
 * Implements hook_schema().
 */
function loop_notification_schema() {
  $schema['loop_notification_user_settings'] = array(
    'description' => 'User settings for notifications.',
    'fields' => array(
      'uid' => array('type' => 'int', 'unsigned' => TRUE, 'not null' => TRUE),
      'enabled' => array('type' => 'int', 'unsigned' => TRUE, 'not null' => TRUE, 'default' => '0', 'size' => 'tiny'),
      'update_interval' => array('type' => 'int', 'unsigned' => TRUE, 'not null' => TRUE, 'default' => '604800'),
    ),
  );
  return $schema;
}

/**
